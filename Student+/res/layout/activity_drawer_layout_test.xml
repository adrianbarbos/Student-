<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>
    <!-- The navigation drawer -->
    
    <ScrollView
        android:id="@+id/left_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#151d20"
        android:orientation="vertical" >

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#151d20"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
                    android:id="@+id/logout"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@null"
                    android:gravity="center_vertical"
                    
                    
            android:layout_marginLeft="12dp"
                    android:src="@drawable/ic_logout" />
           

         
        </LinearLayout>
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
         android:layout_marginTop="10dp"
         android:layout_marginBottom="10dp"
            android:orientation="vertical" >
                
          <ImageView
              android:contentDescription="@null"
         android:id="@+id/avatar"
         android:layout_width="150dp"
         android:layout_height="150dp"
         android:layout_marginBottom="10dp"
         
         android:scaleType="centerCrop"
         
         android:src="@drawable/photo" />
          
          <TextView
         android:id="@+id/profilename"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="20sp"
         android:gravity="center_horizontal"
         android:textColor="#FFFFFF"
         android:textStyle="bold"
         android:text="Nume Prenume" />

     <TextView
         android:id="@+id/type"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="15sp"
         android:textStyle="bold"
         android:textColor="#0491bf"
         android:text="MEMBRU BIROU" />
          
          
        </LinearLayout>
        
         <ExpandableListView
            android:id="@+id/list"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="#111"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:visibility="gone"
            
            android:layout_marginBottom="30dp"
            android:groupIndicator="@drawable/arrowselector" />

          <View 
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:background="#0c1416"/>
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:id="@+id/noutati"
        android:background="#0c1416" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_news" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/imageView1"
            android:textSize="24sp"            
            android:textColor="#939597"
            android:text="News" />

    </RelativeLayout>
     <View 
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:background="#0c1416"/>
     
     
     <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:id="@+id/evenimente"
        android:background="#151d20" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_events" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/imageView1"
            android:textSize="24sp"            
            android:textColor="#939597"
            android:text="Events" />

    </RelativeLayout>
     <View 
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:background="#0c1416"/>
     
     <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:id="@+id/membri"
        android:background="#151d20" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_members" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/imageView1"
            android:textSize="24sp"            
            android:textColor="#939597"
            android:text="Users" />

    </RelativeLayout>
     <View 
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:background="#0c1416"/>
     
     <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:id="@+id/simpatizanti"
        android:background="#151d20" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_simpa" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/imageView1"
            android:textSize="24sp"            
            android:textColor="#939597"
            android:text="Followers" />

    </RelativeLayout>
    
     <View 
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:background="#0c1416"/>
     
     <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:id="@+id/forum"
        android:background="#151d20" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_forum" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/imageView1"
            android:textSize="24sp"            
            android:textColor="#939597"
            android:text="Forum" />
        
        </RelativeLayout>
     <View 
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:background="#0c1416"/>
     
     <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:id="@+id/setari"
        android:background="#151d20" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_settings" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/imageView1"
            android:textSize="24sp"            
            android:textColor="#939597"
            android:text="Settings" />

    </RelativeLayout>
     <View 
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:background="#0c1416"/>
     
     <TextView          
         android:id="@+id/lblMessage"
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:visibility="gone"
         
         />
        
        
        
    </LinearLayout>
    </ScrollView>

</android.support.v4.widget.DrawerLayout>